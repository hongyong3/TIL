import java.util.Scanner;

public class Star6 {

	public static void main(String[] args) {
		Scanner keyboard = new Scanner(System.in);
		int a = keyboard.nextInt();
		keyboard.close();
		int i;

		for (i = 0; i < a; i++) {
			for (int j = 0; j <= i; j++) {
				System.out.print("1");
			}
			for (int k = (2*a-1); k =(2*a-2*i-1); k -=2) {
				System.out.print("*");
			}
		}

	}

}
